{
  "name": "slms-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "smoke": "ts-node ./scripts/smoke-auth.ts",
    "items:import": "ts-node src/scripts/import-items-from-csv.ts",
    "suppliers:import": "ts-node src/scripts/import-suppliers-from-csv.ts",
    "customs:tariffs:import": "ts-node src/scripts/import-customs-tariffs-from-csv.ts",
    "permissions:generate": "ts-node src/scripts/generate-permissions.ts",
    "permissions:validate": "ts-node src/scripts/validate-permissions.ts",
    "seed:procurement": "ts-node scripts/seed-procurement.ts",
    "migrate": "ts-node src/db/migrate.ts",
    "precommit": "npm run permissions:validate",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest src/tests/unit --detectOpenHandles",
    "test:integration": "jest src/tests/integration --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles"
  },
  "dependencies": {
    "@sentry/node": "^10.32.1",
    "@sentry/tracing": "^7.120.4",
    "@types/multer": "^2.0.0",
    "@types/winston": "^2.4.4",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
